<h1>Add a Artist</h1>

<div class='error'>
<% if flash[:my_errors] %>
	<% flash[:my_errors]..each do |error| %>      
<p><%= error %></p>   
 <% end %>  
<% end %>
</div>

<%= form_for(@artist) do |f| %>
<br><%= f.label :name %>
<%= f.text_field :name %>
<br><%= f.label :title %>
<%= f.text_field :title %>
<br><%= f.label :age %>
<%= f.number_field :age %>
<br><%= f.submit %>

<% end %>